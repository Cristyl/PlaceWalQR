<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <!-- Wrapper solo per questo TextView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/main_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textAppearance="?attr/textAppearanceHeadline5"
                android:layout_marginBottom="24dp"/>

        </LinearLayout>

        <!-- Gli altri tuoi elementi qui sotto rimangono normali -->

        <TextView
            android:id="@+id/welcome_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:text="@string/welcome_str"
            android:layout_marginBottom="16dp"/>


        <TextView
            android:id="@+id/seesights"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1"
            android:text="@string/seesights_home"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1"
            android:text="@string/points_home"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/lastplace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1"
            android:text="@string/lastplace_home"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/no_visited"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="@color/colorGray"
            android:text="@string/novisited_txt"
            android:layout_marginBottom="16dp"/>

        <ImageView
            android:id="@+id/photo_visited"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/photoHomepageDescription" />

        <Button
            android:id="@+id/logout_btn"
            android:layout_gravity="end"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="@string/logout_btn" />
    </LinearLayout>
</ScrollView>
